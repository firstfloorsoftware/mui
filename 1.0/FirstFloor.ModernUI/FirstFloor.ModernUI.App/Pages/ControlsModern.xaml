<UserControl x:Class="FirstFloor.ModernUI.App.Pages.ControlsModern"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab SelectedSource="/Content/ControlsModernBBCodeBlock.xaml" Layout="List">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="BBCodeBlock" Source="/Content/ControlsModernBBCodeBlock.xaml"/>
                <mui:Link DisplayName="ModernButton" Source="/Content/ControlsModernButton.xaml" />
                <mui:Link DisplayName="ModernDialog" Source="/Content/ControlsModernDialog.xaml" />
                <mui:Link DisplayName="ModernFrame" Source="/Content/ControlsModernFrame.xaml" />
                <mui:Link DisplayName="ModernMenu" Source="/Content/ControlsModernMenu.xaml" />
                <mui:Link DisplayName="ModernProgressRing" Source="/Content/ControlsModernProgressRing.xaml" />
                <mui:Link DisplayName="ModernWindow" Source="/Content/ControlsModernWindow.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
