<UserControl x:Class="FirstFloor.ModernUI.App.Content.ControlsModernDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel HorizontalAlignment="Left">
        <TextBlock Text="DIALOG" Style="{StaticResource Heading2}" Margin="0,0,0,8" />

        <Button Content="common dialog" Margin="0,0,0,8" Click="CommonDialog_Click"/>
        <Button Content="message dialog" Click="MessageDialog_Click"/>

    </StackPanel>
</UserControl>
